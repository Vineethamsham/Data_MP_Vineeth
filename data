paths:
  /api/devices:
    get:
      summary: Get all available devices with metadata
      parameters:
        - name: category
          in: query
          description: Filter by device category (e.g. Mobile, IoT, Coverage)
          required: false
          schema:
            type: string
        - name: brand
          in: query
          description: Filter by brand name
          required: false
          schema:
            type: string
      responses:
        200:
          description: List of devices with details
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Device'

components:
  schemas:
    Device:
      type: object
      properties:
        device_id:
          type: string
        brand:
          type: string
        model_name:
          type: string
        category:
          type: string
        release_date:
          type: string
          format: date
        screen:
          type: object
          properties:
            size:
              type: string
            type:
              type: string
        camera:
          type: object
          properties:
            front:
              type: string
            rear:
              type: array
              items:
                type: string
        storage_options:
          type: array
          items:
            type: string
        colors_available:
          type: array
          items:
            type: string
        os:
          type: string
        virtual_device:
          type: boolean
        available_promotions:
          type: array
          items:
            $ref: '#/components/schemas/Promotion'
        support_urls:
          type: object
          properties:
            overview:
              type: string
            support_page:
              type: string
        thumbnail_image:
          type: string

    Promotion:
      type: object
